<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondoreg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fontreg"
                app:cardElevation="20dp">
                <TextView
                    android:id="@+id/textReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:padding="10dp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/iconnom"
                app:startIconTint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:layout_marginBottom="30sp"
                android:layout_marginHorizontal="20dp"
                app:boxStrokeColor="@color/black"
                app:startIconDrawable="@drawable/iconape"
                app:startIconTint="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"
               >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                app:startIconDrawable="@drawable/iconcorreo"
                app:startIconTint="@color/black"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"
              >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                app:boxStrokeColor="@color/black"
                app:startIconDrawable="@drawable/iconcontra"
                app:startIconTint="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"

                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:hint="Tipo"
                android:background="@drawable/bg_spinner"
                app:startIconDrawable="@drawable/iconlista"
                app:startIconTint="@color/black">
                <Spinner
                    android:id="@+id/spinnerTipoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="-50dp"
                    android:theme="@style/AppTheme"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginBottom="30dp"
                android:text="REGISTRAR"
                android:backgroundTint="@color/fontreg"
                app:cornerRadius="5dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/iconregis"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>